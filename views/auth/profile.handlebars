<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Profile</h1>
            <h2>Username: {{ user.username }}</h2>
            <h2>First name: {{ user.firstName }}</h2>
            <h2>Surname: {{ user.surname }}</h2>
        </div>
        <div class="col-4 offset-4">
            <img src="{{ user.picture }}" class="img-fluid" />
        </div>
        <div class="col-12">
            <h3>Messages</h3>
        </div>
        <div class="col-12">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User</th>
                        <th scope="col">Product</th>
                        <th scope="col">Message</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each messages}}
                    <tr>
                        <th scope="row">{{@key}}</th>
                        <td><img src="{{ user.picture }}" class="img-fluid" /></td>
                        <td><img src="{{ product.pictures.[0] }}" class="img-fluid" /></td>
                        <td>{{ content }}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>